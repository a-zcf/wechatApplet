<view class="login">
    <view wx:if="{{canIUse}}">
        <view class='header'>
            <image src='../../images/loginImg.png'></image>
        </view>
 
        <view class='content'>
            <view>申请获取以下权限</view>
            <text>获得你的公开信息(昵称，头像等)</text>
        </view>
 
        <button class='bottom' type='primary' open-type="getUserInfo" lang="zh_CN" bindgetuserinfo="bindGetUserInfo">
            授权登录
        </button>
    </view>
    <view wx:else class="new-edition">请升级微信版本</view>
</view> 
