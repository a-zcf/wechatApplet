.applylist{
  height: 100%;
  overflow: hidden;
  position: relative;
}
.conten{
  height: 100%;
  overflow: hidden;
  overflow-y: auto;
  padding-bottom: 90rpx;
  box-sizing: border-box;
}
.list{
  width: 95%;
  margin: 20rpx auto auto auto;
  background-color: #faf6f6;
  padding: 15rpx;
  box-sizing: border-box;
  border-radius: 10rpx;
}
.applyInfo-text{
  display: flex;
  flex-wrap: nowrap;
  align-items: center;
  padding: 20rpx 0rpx;
  border-bottom: 1rpx solid #87CEEB;
  border-radius: 10rpx;
  margin-bottom: 15rpx;
}
.color{
  color: #1a76d1;
  margin-right: 10rpx;
  font-size: 40rpx;
}
.shop-name{
  white-space: nowrap;
  overflow: hidden;
}
.list-info{
  display: flex;
  flex-wrap: nowrap;
  align-items: center;
  justify-content: space-between;
  padding: 15rpx 0rpx;
}
.listInfo-left{
  width: 35%;
}
.listInfo-right{
  width: 65%;
  white-space: nowrap;
  overflow: hidden;
}

.applylist-but{
  width: 100%;
  height: 80rpx;
  position: absolute;
  bottom: 0;
  display: flex;
  justify-content: center;
  align-items: center;
  color: #fff;
  background-image: linear-gradient(to left,#87CEEB,#00BFFF);
}
.but-icon{
  font-size: 40rpx;
  margin-right: 10rpx;
}
.kaquan{
  font-size: 35rpx;
}
