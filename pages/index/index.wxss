/**index.wxss**/
container{
  width: 100%;
  height: 100%;
  overflow: hidden;
  position: relative;
}
.content{
  height: 210rpx;
  background-color: #f2f2f2;
  display: flex;
  flex-wrap: nowrap;
  align-items: center;
  text-align: center;
  justify-content: space-between;
  padding: 0 30rpx;
  box-sizing: border-box;
}
.content .left-right{
 width: 40%;
  display:flex;
  flex-direction: column;
  align-items: center;
}
.content .left-right .icon-lr{
  width: 50%;
  font-size: 70rpx;
  margin-bottom: 8rpx;
}
.list{
  padding: 15rpx; 
  width: 100%;
  box-sizing: border-box;
}
.list .list-cont{
  width: 100%;
  display: flex;
  flex-wrap: nowrap;
  align-items: center;
  border-bottom: 1rpx solid #f2f2f2;
  padding: 15rpx 10rpx;
  justify-content: space-between;
  box-sizing: border-box;
}
.list .list-cont .list-text{
  width: 80%;
}
.list .list-cont .bzzx{
  width:35%;
}
.list .list-cont .phone{
  width:40%;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}
.list .list-cont .more{
  color: #a5a4a4;
  font-size: 25rpx;
}
.list .list-cont .icon-left{
  width: 8%;
  font-size: 50rpx;
  text-align: center;
}
.list .list-cont .color-01{
  color: #1a76d1;
}
.list .list-cont .color-02{
  color: #dfb69d;
}
.list .list-cont .color-03{
  color: #863c86;
}
.list .list-cont .color-04{
  color: #78d3bf;
}
.binding{
  width: 100%;
  height: 100%;
  position: absolute;
  top: 0;
  background:rgba(0, 0, 0, 0.5);
  z-index: 99999;
}
.binding-kuang{
  width: 75%;
  height: 500rpx;
  background-color: #fff;
  margin: 50% auto auto auto;
  border-radius: 10rpx;
  position: relative;
}
.binding-text{
  text-align: center;
  display: block;
  padding: 20rpx 0;
  background-image: linear-gradient(to left,#87CEEB,#00BFFF);
  color: #fff;
  font-size: 40rpx;
  border-radius: 10rpx 10rpx 0rpx 0rpx;
}
.binding-input{
  margin-top: 40rpx;
}
.input{
  width: 95%;
  margin: auto;
  display: flex;
  flex-wrap: nowrap;
  align-items: center;
  justify-content: space-between;
  padding: 0 8rpx 1rpx 8rpx;
  border-bottom: 1rpx solid #f2f2f2;
  box-sizing: border-box;
}

.input .inut-field{
  width: 85% !important;
}
.input .van-cell {
  padding: 20rpx 0 !important;
}
.binding-but{
  width: 50%;
  height: 70rpx;
  line-height: 70rpx;
  position: absolute;
  bottom: 25rpx;
  left: 25%;
  background-image: linear-gradient(to left,#87CEEB,#00BFFF);
 border-radius: 100rpx;
 color:#fff;
 font-size: 30rpx;
}
.error-text{
  color: red;
  display: flex;
  flex-wrap: nowrap;
  align-items: center;
  justify-content: center;
}
.error-text .error-icon{
  font-size: 40rpx;
}