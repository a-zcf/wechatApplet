.writedetails{
  width: 100%;
  height: 100%;
  position: relative;
}
.writedetails-list{
  height: 100%;
}
.writedetails-list{
  display: flex;
  flex-wrap: nowrap;
  align-items: center;
  border-bottom: 1rpx solid #f2f2f2;
  box-sizing: border-box;
  padding: 15rpx 20rpx;
  border-radius: 15rpx;
}
.list-left{
  width: 60%;
  margin-right: 10rpx;
  display: flex;
  flex-direction: column;
  line-height: 50rpx;
}
.left-text{
  white-space: nowrap;
  overflow: hidden;
}
.list-right{
  width: 40%;
  text-align: left;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
}

.loading{
  width: 100%;
  display: flex;
  justify-content: center;
  padding: 20rpx 0;
  box-sizing: border-box;
}
.nomore{
  width: 80%;
  margin: auto;
}